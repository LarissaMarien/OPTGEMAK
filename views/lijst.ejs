<% include header %>
<% include nav %>
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/isotopestyle.css">



<h1>Lijst met toiletten</h1>

  <div class="list">

    <div class="button-group filters-button-group">
      <button class="button is-checked" data-filter="*">Show all</button>
      <button class="button" data-filter=".man">Mannen</button>
      <button class="button" data-filter=".vrouw">Vrouwen</button>
      <button class="button" data-filter=".handicap">Gehandicapt</button>
      <button class="button" data-filter=".luiertafel">Luiertafel</button>
    </div>

    <div class="grid">

  <%
    var toiletLijst = toiletten.length;
    for(var toiletIndex=0; toiletIndex<toiletLijst; toiletIndex++) {
  %>

          <div class="element-item">

            <% var toilet = toiletten[toiletIndex] %>

            <%
            let classes;
              if (toilet.attributes.INTEGRAAL_TOEGANKELIJK == "ja") {
                classes += " handicap ";
              }
              if (toilet.attributes.DOELGROEP == "man" ) {
                classes += " man ";
              }
              if (toilet.attributes.DOELGROEP == "vrouw" ) {
                classes += " vrouw ";
              }
              if (toilet.attributes.DOELGROEP == "man/vrouw" ) {
                classes += " man vrouw ";
              }
              if (toilet.attributes.LUIERTAFEL == "ja" ) {
                classes += " luiertafel ";
              }
            %>


            <p class=" <%=classes%>"><%=toilet.attributes.OMSCHRIJVING %></p>
            <p class=" <%=classes%>"><%=toilet.attributes.DOELGROEP %></p>
            <p class=" <%=classes%>"><%=toilet.attributes.DOELGROEP %></p>
            <p class=" <%=classes%>"><%=toilet.attributes.INTEGRAAL_TOEGANKELIJK %></p>
            <p class=" <%=classes%>"><%=toilet.attributes.LUIERTAFEL %></p>

            <a class="more" href="/toiletdetail/<%=toiletIndex %>">Meer lezen...</a>

          </div>

  <%
    }
  %>

    </div>

  <script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.js"></script>
  <script src="/js/lijst.js"></script>

<% include footer %>
